{
  "manifest_version": 2,
  "name": "JD Express Ads Remover",
  "version": "1.0",
  "description": "Remove JD Express splash ads.",
  "permissions": [
    "tabs",
    "activeTab",
    "webNavigation"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*.jd.com/*"],
      "js": ["content.js"]
    }
  ]
}