{
  "manifest_version": 2,
  "name": "京东快递开屏广告去除",
  "description": "去除京东快递App中的开屏广告",
  "version": "1.0",
  "icons": {
    "32": "icon.png",
    "64": "icon.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.jd.com/*", "*://*.jdexpress.com/*"],
      "js": ["content.js"]
    }
  ]
}